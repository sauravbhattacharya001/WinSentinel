{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/WinSentinel.Core/**/*.csproj",
            "src/WinSentinel.Cli/**/*.csproj",
            "src/WinSentinel.Agent/**/*.csproj"
          ],
          "src": ".."
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net8.0-windows"
      },
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appTitle": "WinSentinel",
      "_appName": "WinSentinel",
      "_appFooter": "WinSentinel â€” Your Always-On Windows Security Agent",
      "_enableSearch": true,
      "_enableNewTab": true,
      "_disableContribution": false,
      "_gitContribute": {
        "repo": "https://github.com/sauravbhattacharya001/WinSentinel",
        "branch": "main"
      }
    },
    "dest": "_site",
    "xrefService": [
      "https://xref.docs.microsoft.com/query?uid={uid}"
    ]
  }
}
