                        <Button Content="ðŸš€ Startup" Tag="Startup" Style="{StaticResource NavButton}" Click="NavAudit_Click" />
                        <Button Content="ðŸ’» System" Tag="System" Style="{StaticResource NavButton}" Click="NavAudit_Click" />
                        <Separator Background="{StaticResource CardBorder}" Margin="16,8" />
                        <Button Content="âš™ï¸ Settings" Style="{StaticResource NavButton}" Click="NavSettings_Click" />
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Content Area -->
            <Frame Grid.Column="1" x:Name="ContentFrame" NavigationUIVisibility="Hidden" />
        </Grid>

        <!-- Agent Connection Status Bar -->
        <Border Grid.Row="1" Background="#0E0E1E" BorderBrush="{StaticResource CardBorder}" BorderThickness="0,1,0,0"
                Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Agent Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock x:Name="AgentStatusIcon" Text="ðŸ”´" FontSize="12" VerticalAlignment="Center" />
                    <TextBlock x:Name="AgentStatusText" Text="Agent Disconnected" FontSize="12"
