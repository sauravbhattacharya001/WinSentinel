                </StackPanel>

                <!-- Uptime -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="â±ï¸" FontSize="12" VerticalAlignment="Center" />
