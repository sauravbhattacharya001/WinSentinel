                                <TextBlock Text="âš¡ Threat Feed" VerticalAlignment="Center" />
                                <!-- Unread critical badge -->
                                <Border x:Name="CriticalBadge" 
                                       HorizontalAlignment="Right" VerticalAlignment="Center"
                                       Background="#F44336" CornerRadius="10" 
                                       MinWidth="22" Height="22" Padding="6,2"
                                       Visibility="Collapsed">
                                    <TextBlock x:Name="CriticalBadgeText" Text="0" 
                                              FontSize="11" FontWeight="Bold" 
                                              Foreground="White" HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                                </Border>
                            </Grid>
                        </Button>

                        <Button Content="ðŸ“Š Dashboard" Style="{StaticResource NavButton}" Click="NavDashboard_Click" />
                        <Button Content="ðŸ’¬ Chat" Style="{StaticResource NavButton}" Click="NavChat_Click" />
                        <Separator Background="{StaticResource CardBorder}" Margin="16,8" />
                        <Button Content="ðŸ”¥ Firewall" Tag="Firewall" Style="{StaticResource NavButton}" Click="NavAudit_Click" />
                        <Button Content="ðŸ”„ Updates" Tag="Updates" Style="{StaticResource NavButton}" Click="NavAudit_Click" />
                        <Button Content="ðŸ›¡ï¸ Defender" Tag="Defender" Style="{StaticResource NavButton}" Click="NavAudit_Click" />
                        <Button Content="ðŸ‘¤ Accounts" Tag="Accounts" Style="{StaticResource NavButton}" Click="NavAudit_Click" />
                        <Button Content="ðŸŒ Network" Tag="Network" Style="{StaticResource NavButton}" Click="NavAudit_Click" />
