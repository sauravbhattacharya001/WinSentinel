<Page
    x:Class="WinSentinel.App.Views.ChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource AppBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="24,16" 
                BorderBrush="{StaticResource CardBorder}" 
                BorderThickness="0,0,0,1">
            <Grid>
                <TextBlock Text="ðŸ›¡ï¸ Security Advisor" FontSize="20" FontWeight="SemiBold"
                          Foreground="{StaticResource TextPrimary}" />
                <TextBlock x:Name="OllamaStatus" Text="" FontSize="12"
                          HorizontalAlignment="Right" VerticalAlignment="Center"
                          Foreground="{StaticResource TextSecondary}" />
            </Grid>
        </Border>

        <!-- Chat Messages -->
        <ScrollViewer Grid.Row="1" x:Name="ChatScroller" Padding="24,16"
                     VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="MessageList" />
        </ScrollViewer>

        <!-- Quick Actions -->
        <WrapPanel Grid.Row="2" HorizontalAlignment="Center" Margin="24,8">
            <Button Content="ðŸ” Scan" Click="QuickAction_Click" Tag="/scan" 
                    Style="{StaticResource QuickButton}" Margin="4" />
            <Button Content="ðŸ“Š Score" Click="QuickAction_Click" Tag="/score" 
                    Style="{StaticResource QuickButton}" Margin="4" />
            <Button Content="âš ï¸ Issues" Click="QuickAction_Click" Tag="what's wrong?" 
                    Style="{StaticResource QuickButton}" Margin="4" />
            <Button Content="ðŸ”§ Fix All" Click="QuickAction_Click" Tag="/fixall" 
                    Style="{StaticResource QuickButton}" Margin="4" />
            <Button Content="ðŸ“ˆ History" Click="QuickAction_Click" Tag="/history" 
                    Style="{StaticResource QuickButton}" Margin="4" />
            <Button Content="â“ Help" Click="QuickAction_Click" Tag="/help" 
                    Style="{StaticResource QuickButton}" Margin="4" />
        </WrapPanel>

        <!-- Input Area -->
        <Grid Grid.Row="3" Margin="24,8,24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="InputBox" 
                    KeyDown="InputBox_KeyDown"
                    AcceptsReturn="False"
                    Background="#2A2A4A"
                    Foreground="{StaticResource TextPrimary}"
                    BorderBrush="{StaticResource CardBorder}"
                    Padding="12,8"
                    FontSize="14"
                    VerticalContentAlignment="Center" />

            <Button Grid.Column="1" x:Name="SendButton"
                    Content="Send" 
                    Style="{StaticResource AccentButton}"
                    Click="SendButton_Click"
                    Margin="8,0,0,0" />
        </Grid>
    </Grid>
</Page>
