<Page
    x:Class="WinSentinel.App.Views.ChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource AppBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="24,16" 
                BorderBrush="{StaticResource CardBorder}" 
                BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ›¡ï¸ Security Advisor" FontSize="20" FontWeight="SemiBold"
                              Foreground="{StaticResource TextPrimary}" />
                    <Border x:Name="AgentBadge" CornerRadius="8" Padding="8,2" Margin="12,0,0,0"
                            VerticalAlignment="Center" Background="#1A4CAF50">
                        <TextBlock x:Name="AgentBadgeText" Text="âš¡ Agent Connected" FontSize="11"
                                  Foreground="#4CAF50" />
                    </Border>
                </StackPanel>
                <TextBlock x:Name="OllamaStatus" Text="" FontSize="12"
                          HorizontalAlignment="Right" VerticalAlignment="Center"
                          Foreground="{StaticResource TextSecondary}" />
            </Grid>
        </Border>

        <!-- Chat Messages -->
        <ScrollViewer Grid.Row="1" x:Name="ChatScroller" Padding="24,16"
                     VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="MessageList" />
        </ScrollViewer>

        <!-- Suggested Actions (dynamic) -->
        <WrapPanel Grid.Row="2" x:Name="SuggestedActionsPanel" 
                   HorizontalAlignment="Center" Margin="24,4"
                   Visibility="Collapsed" />

        <!-- Quick Actions -->
        <WrapPanel Grid.Row="3" HorizontalAlignment="Center" Margin="24,4">
            <Button Content="ðŸ“Š Status" Click="QuickAction_Click" Tag="status" 
                    Style="{StaticResource QuickButton}" Margin="4" />
            <Button Content="ðŸ” Scan" Click="QuickAction_Click" Tag="scan" 
                    Style="{StaticResource QuickButton}" Margin="4" />
            <Button Content="âš ï¸ Threats" Click="QuickAction_Click" Tag="threats" 
                    Style="{StaticResource QuickButton}" Margin="4" />
            <Button Content="ðŸ”§ Fix All" Click="QuickAction_Click" Tag="fix all" 
                    Style="{StaticResource QuickButton}" Margin="4" />
            <Button Content="ðŸ“ˆ History" Click="QuickAction_Click" Tag="history" 
                    Style="{StaticResource QuickButton}" Margin="4" />
            <Button Content="â“ Help" Click="QuickAction_Click" Tag="help" 
                    Style="{StaticResource QuickButton}" Margin="4" />
        </WrapPanel>

        <!-- Input Area -->
        <Grid Grid.Row="4" Margin="24,8,24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="InputBox" 
                    KeyDown="InputBox_KeyDown"
                    AcceptsReturn="False"
                    Background="#2A2A4A"
                    Foreground="{StaticResource TextPrimary}"
                    BorderBrush="{StaticResource CardBorder}"
                    Padding="12,8"
                    FontSize="14"
                    VerticalContentAlignment="Center" />

            <Button Grid.Column="1" x:Name="SendButton"
                    Content="Send" 
                    Style="{StaticResource AccentButton}"
                    Click="SendButton_Click"
                    Margin="8,0,0,0" />
        </Grid>
    </Grid>
</Page>
