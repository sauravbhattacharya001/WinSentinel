<Page x:Class="WinSentinel.App.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource AppBackground}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="32" MaxWidth="1000">
            <!-- Header -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="ðŸ›¡ï¸ Security Dashboard" FontSize="28" FontWeight="Bold" 
                              Foreground="{StaticResource TextPrimary}" />
                    <TextBlock x:Name="StatusText" Text="Ready to scan" 
                              Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0" FontSize="14" />
                </StackPanel>

                <Button Grid.Column="1" x:Name="ScanButton" Content="â–¶ Run Full Audit" 
                        Style="{StaticResource AccentButton}" Click="ScanButton_Click"
                        MinWidth="160" VerticalAlignment="Center" />
            </Grid>

            <!-- Progress -->
            <ProgressBar x:Name="ScanProgress" IsIndeterminate="True" Visibility="Collapsed" 
                        Height="3" Margin="0,0,0,8" Foreground="{StaticResource AccentBrush}" />
            <TextBlock x:Name="ProgressText" Visibility="Collapsed" 
                      Foreground="{StaticResource TextSecondary}" FontSize="13" Margin="0,0,0,16" />

            <!-- Security Score Card -->
            <Border Background="{StaticResource CardBackground}" CornerRadius="12" Padding="32" 
                    BorderBrush="{StaticResource CardBorder}" BorderThickness="1" Margin="0,0,0,16">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Security Score" FontSize="18" FontWeight="SemiBold"
                              Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" />
                    <TextBlock x:Name="ScoreText" Text="â€”" FontSize="72" FontWeight="Bold"
                              Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center" Margin="0,8,0,0" />
                    <TextBlock x:Name="GradeText" Text="" FontSize="24" HorizontalAlignment="Center"
                              Foreground="{StaticResource TextSecondary}" />
                    <TextBlock x:Name="ScoreChangeText" Text="" FontSize="16" HorizontalAlignment="Center"
                              Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0" />
                </StackPanel>
            </Border>

            <!-- Score Trend Section -->
            <Border x:Name="TrendSection" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="24" 
                    BorderBrush="{StaticResource CardBorder}" BorderThickness="1" Margin="0,0,0,16" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="ðŸ“ˆ Score Trend" FontSize="18" FontWeight="SemiBold" 
                              Foreground="{StaticResource TextPrimary}" Margin="0,0,0,12" />

                    <!-- Text-based trend chart -->
                    <Border Background="#0AFFFFFF" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock x:Name="TrendChartText" FontFamily="Cascadia Mono,Consolas,Courier New"
                                      FontSize="13" Foreground="{StaticResource TextPrimary}" 
                                      TextWrapping="NoWrap" />
                        </StackPanel>
                    </Border>

                    <!-- Historical comparison -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#0AFFFFFF" CornerRadius="6" Padding="12" Margin="0,0,6,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ† Best" FontSize="13" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" />
                                <TextBlock x:Name="BestScoreText" Text="â€”" FontSize="20" FontWeight="Bold" 
                                          Foreground="#4CAF50" HorizontalAlignment="Center" Margin="0,4,0,0" />
                                <TextBlock x:Name="BestScoreDateText" Text="" FontSize="11" 
                                          Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="#0AFFFFFF" CornerRadius="6" Padding="12" Margin="3,0,3,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ“Š Average" FontSize="13" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" />
                                <TextBlock x:Name="AvgScoreText" Text="â€”" FontSize="20" FontWeight="Bold" 
                                          Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center" Margin="0,4,0,0" />
                                <TextBlock x:Name="TotalScansText" Text="" FontSize="11" 
                                          Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Background="#0AFFFFFF" CornerRadius="6" Padding="12" Margin="6,0,0,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ“‰ Worst" FontSize="13" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" />
                                <TextBlock x:Name="WorstScoreText" Text="â€”" FontSize="20" FontWeight="Bold" 
                                          Foreground="#F44336" HorizontalAlignment="Center" Margin="0,4,0,0" />
                                <TextBlock x:Name="WorstScoreDateText" Text="" FontSize="11" 
                                          Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Category Cards -->
            <TextBlock Text="Category Breakdown" FontSize="20" FontWeight="SemiBold" 
                      Foreground="{StaticResource TextPrimary}" Margin="0,0,0,12" />
            <ItemsControl x:Name="CategoryList" />

            <!-- Recent Alerts -->
            <TextBlock Text="Recent Alerts" FontSize="20" FontWeight="SemiBold" 
                      Foreground="{StaticResource TextPrimary}" Margin="0,24,0,12" />
            <ItemsControl x:Name="AlertsList" />

            <TextBlock x:Name="NoAlertsText" Text="No alerts yet. Run a scan to check your security."
                      Foreground="{StaticResource TextSecondary}" FontStyle="Italic" FontSize="14" />
        </StackPanel>
    </ScrollViewer>
</Page>
