<Page x:Class="WinSentinel.App.Views.ThreatFeedPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:WinSentinel.App.Controls"
      Background="{StaticResource AppBackground}">

    <Page.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVis" />
        <local:BoolToVisibilityConverter x:Key="BoolToVisInverse" Invert="True" />
        <local:SeverityToBrushConverter x:Key="SeverityBrush" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="32,24,32,0">
            <TextBlock Text="âš¡ Live Threat Feed" FontSize="28" FontWeight="Bold" 
                      Foreground="{StaticResource TextPrimary}" />
            <TextBlock Text="Real-time security events from the WinSentinel Agent"
                      Foreground="{StaticResource TextSecondary}" FontSize="14" Margin="0,4,0,0" />
        </StackPanel>

        <!-- Stats Header -->
        <Border Grid.Row="1" Background="{StaticResource CardBackground}" CornerRadius="12" 
                Margin="32,16,32,0" Padding="20,16"
                BorderBrush="{StaticResource CardBorder}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Total Today -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Today" FontSize="12" Foreground="{StaticResource TextSecondary}" 
                              HorizontalAlignment="Center" />
                    <TextBlock x:Name="StatTotal" Text="0" FontSize="24" FontWeight="Bold" 
                              Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Critical -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ”´ Critical" FontSize="12" Foreground="#F44336" 
                              HorizontalAlignment="Center" />
                    <TextBlock x:Name="StatCritical" Text="0" FontSize="24" FontWeight="Bold" 
                              Foreground="#F44336" HorizontalAlignment="Center" />
                </StackPanel>

                <!-- High -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸŸ  High" FontSize="12" Foreground="#FF9800" 
                              HorizontalAlignment="Center" />
                    <TextBlock x:Name="StatHigh" Text="0" FontSize="24" FontWeight="Bold" 
                              Foreground="#FF9800" HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Medium -->
                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸŸ¡ Medium" FontSize="12" Foreground="#FFC107" 
                              HorizontalAlignment="Center" />
                    <TextBlock x:Name="StatMedium" Text="0" FontSize="24" FontWeight="Bold" 
                              Foreground="#FFC107" HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Low -->
                <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ”µ Low" FontSize="12" Foreground="#2196F3" 
                              HorizontalAlignment="Center" />
                    <TextBlock x:Name="StatLow" Text="0" FontSize="24" FontWeight="Bold" 
                              Foreground="#2196F3" HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Auto-Fixed -->
                <StackPanel Grid.Column="5" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ”§ Fixed" FontSize="12" Foreground="#4CAF50" 
                              HorizontalAlignment="Center" />
                    <TextBlock x:Name="StatFixed" Text="0" FontSize="24" FontWeight="Bold" 
                              Foreground="#4CAF50" HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Dismissed -->
                <StackPanel Grid.Column="6" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸš« Dismissed" FontSize="12" Foreground="{StaticResource TextSecondary}" 
                              HorizontalAlignment="Center" />
                    <TextBlock x:Name="StatDismissed" Text="0" FontSize="24" FontWeight="Bold" 
                              Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filter Bar -->
        <Border Grid.Row="2" Background="{StaticResource CardBackground}" CornerRadius="12" 
                Margin="32,12,32,0" Padding="16,12"
                BorderBrush="{StaticResource CardBorder}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Search -->
                <TextBox x:Name="SearchBox" Grid.Column="0"
                        Background="#14142A" Foreground="{StaticResource TextPrimary}"
                        BorderBrush="{StaticResource CardBorder}" BorderThickness="1"
                        Padding="10,8" FontSize="13" VerticalContentAlignment="Center"
                        Text="" TextChanged="SearchBox_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Tag" Value="ðŸ” Search threats..." />
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Severity Filter -->
                <ComboBox x:Name="SeverityCombo" Grid.Column="1" Margin="8,0,0,0"
                         MinWidth="120" FontSize="13" Padding="8,6"
                         SelectionChanged="SeverityCombo_Changed">
                    <ComboBoxItem Content="All Severity" IsSelected="True" />
                    <ComboBoxItem Content="Critical" />
                    <ComboBoxItem Content="High" />
                    <ComboBoxItem Content="Medium" />
                    <ComboBoxItem Content="Low" />
                    <ComboBoxItem Content="Info" />
                </ComboBox>

                <!-- Module Filter -->
                <ComboBox x:Name="ModuleCombo" Grid.Column="2" Margin="8,0,0,0"
                         MinWidth="140" FontSize="13" Padding="8,6"
                         SelectionChanged="ModuleCombo_Changed">
                    <ComboBoxItem Content="All Modules" IsSelected="True" />
                </ComboBox>

                <!-- Time Filter -->
                <ComboBox x:Name="TimeCombo" Grid.Column="3" Margin="8,0,0,0"
                         MinWidth="120" FontSize="13" Padding="8,6"
                         SelectionChanged="TimeCombo_Changed">
                    <ComboBoxItem Content="All Time" IsSelected="True" />
                    <ComboBoxItem Content="Last Hour" />
                    <ComboBoxItem Content="Last 24h" />
                    <ComboBoxItem Content="Last 7 Days" />
                </ComboBox>

                <!-- Clear Filters -->
                <Button Grid.Column="4" Content="âœ• Clear" Margin="8,0,0,0"
                       Style="{StaticResource QuickButton}" Click="ClearFilters_Click" />
            </Grid>
        </Border>

        <!-- Threat Feed List -->
        <Grid Grid.Row="3" Margin="32,12,32,16">
            <!-- Empty state -->
            <Border x:Name="EmptyState" Visibility="Visible"
                    Background="{StaticResource CardBackground}" CornerRadius="12"
                    BorderBrush="{StaticResource CardBorder}" BorderThickness="1"
                    Padding="40" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ›¡ï¸" FontSize="48" HorizontalAlignment="Center" />
                    <TextBlock Text="No threats detected" FontSize="20" FontWeight="SemiBold"
                              Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center" Margin="0,12,0,4" />
                    <TextBlock Text="The agent is monitoring your system. Threats will appear here in real-time."
                              Foreground="{StaticResource TextSecondary}" FontSize="14" HorizontalAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- Threat cards -->
            <ScrollViewer x:Name="ThreatScroller" VerticalScrollBarVisibility="Auto"
                         ScrollChanged="ThreatScroller_ScrollChanged">
                <ItemsControl x:Name="ThreatList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource CardBackground}" CornerRadius="10"
                                    Margin="0,0,0,8" Padding="16,14"
                                    BorderThickness="1,1,1,1">
                                <Border.BorderBrush>
                                    <SolidColorBrush Color="{Binding SeverityColor}" Opacity="0.5" />
                                </Border.BorderBrush>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Row 1: Main info -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Severity icon + badge -->
                                        <Border Grid.Column="0" CornerRadius="6" Padding="8,4" Margin="0,0,12,0"
                                                VerticalAlignment="Top">
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding SeverityColor}" Opacity="0.15" />
                                            </Border.Background>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding SeverityIcon}" FontSize="14" VerticalAlignment="Center" />
                                                <TextBlock Text="{Binding SeverityLevel}" FontSize="12" FontWeight="SemiBold"
                                                          Margin="4,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock.Foreground>
                                                        <SolidColorBrush Color="{Binding SeverityColor}" />
                                                    </TextBlock.Foreground>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>

                                        <!-- Title + meta -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Title}" FontSize="15" FontWeight="SemiBold"
                                                      Foreground="{StaticResource TextPrimary}" TextWrapping="Wrap" />
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding Source}" FontSize="12"
                                                          Foreground="{StaticResource AccentBrush}" />
                                                <TextBlock Text=" Â· " FontSize="12"
                                                          Foreground="{StaticResource TextSecondary}" />
                                                <TextBlock Text="{Binding TimestampFull}" FontSize="12"
                                                          Foreground="{StaticResource TextSecondary}" />
                                                <TextBlock Text=" Â· " FontSize="12"
                                                          Foreground="{StaticResource TextSecondary}" />
                                                <TextBlock Text="{Binding ResponseDisplay}" FontSize="12"
                                                          Foreground="{StaticResource TextSecondary}" FontStyle="Italic" />
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Timestamp -->
                                        <TextBlock Grid.Column="2" Text="{Binding TimestampFormatted}" 
                                                  FontSize="13" FontFamily="Cascadia Mono,Consolas"
                                                  Foreground="{StaticResource TextSecondary}" 
                                                  VerticalAlignment="Top" Margin="12,0,0,0" />
                                    </Grid>

                                    <!-- Row 2: Description -->
                                    <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                              FontSize="13" Foreground="{StaticResource TextSecondary}"
                                              TextWrapping="Wrap" Margin="0,8,0,0"
                                              MaxHeight="60" TextTrimming="CharacterEllipsis" />

                                    <!-- Row 3: Action buttons -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button Content="ðŸ”§ Fix" Tag="{Binding}" 
                                               Style="{StaticResource QuickButton}"
                                               Click="FixButton_Click" Margin="0,0,6,0"
                                               Visibility="{Binding CanFix, Converter={StaticResource BoolToVis}}" />

                                        <Button Content="ðŸš« Dismiss" Tag="{Binding}" 
                                               Style="{StaticResource QuickButton}"
                                               Click="DismissButton_Click" Margin="0,0,6,0"
                                               Visibility="{Binding CanDismiss, Converter={StaticResource BoolToVis}}" />

                                        <Button Content="âª Undo" Tag="{Binding}" 
                                               Style="{StaticResource QuickButton}"
                                               Click="UndoButton_Click" Margin="0,0,6,0"
                                               Visibility="{Binding CanUndo, Converter={StaticResource BoolToVis}}" />

                                        <Button Content="ðŸ”½ Details" Tag="{Binding}" 
                                               Style="{StaticResource QuickButton}"
                                               Click="DetailsButton_Click" Margin="0,0,6,0" />

                                        <Button Content="ðŸ”‡ Ignore Future" Tag="{Binding}" 
                                               Style="{StaticResource QuickButton}"
                                               Click="IgnoreFutureButton_Click" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
